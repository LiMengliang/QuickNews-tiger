<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/biz_pc_main_bg"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      
        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:src="@drawable/my_icon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/user_icon"
            android:layout_toRightOf="@+id/user_icon"
            android:text="李梦亮" 
            android:textColor="@color/white"/>
    </RelativeLayout>
    <View  
   		android:layout_width="fill_parent"  
    	android:layout_height="1px" 
    	android:layout_marginLeft="5dip"
    	android:layout_marginRight="5dip"
   		android:background="@color/darkgray" />  
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/pics"
            style="@style/item_left"
            android:drawableLeft="@drawable/biz_navigation_tab_pics"
            android:text="@string/pics" />
        
        <Button
            android:id="@+id/video"
            style="@style/item_left"
            android:drawableLeft="@drawable/biz_navigation_tab_video"
            android:text="@string/video" />
        <Button 
            android:id="@+id/audio"
            style="@style/item_left"
            android:drawableLeft="@drawable/biz_navigation_tab_video"
            android:text="@string/audio"/>
        <Button
             android:id="@+id/ties"
            style="@style/item_left"
            android:drawableLeft="@drawable/biz_navigation_tab_news"
            android:visibility="gone"
            android:text="@string/ties" />
        <Button
            android:id="@+id/tianqi"
            style="@style/item_left"
            android:drawableLeft="@drawable/biz_navigation_tab_read"
            android:text="@string/tianqi" />
        <Button
            android:id="@+id/more"
            style="@style/item_left"
            android:drawableLeft="@drawable/biz_navigation_tab_ties"
            android:text="@string/more" />
	</LinearLayout>
</LinearLayout>